{
  "name": "satya-coaching",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently \"cd client && npm run dev\" \"cd server && npm run dev\"",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build && cd ../server && npm run build",
    "check": "cd client && npm run typecheck && cd ../server && npm run typecheck",
    "ci-check": "npm run check",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "cd client && npm run test -- --reporter verbose && cd ../server && npm run test -- --verbose",
    "ci-all": "npm run lint && npm run ci-check && npm run test"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.2.0",
    "@capacitor/core": "^7.2.0",
    "@eslint/js": "9.25.1",
    "@types/bcryptjs": "^2.4.6",
    "@typescript-eslint/parser": "^8.29.0",
    "concurrently": "^8.2.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.1"
  },
  "dependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/ios": "^7.2.0",
    "bcryptjs": "^3.0.2",
    "express-validator": "^7.2.1",
    "i18next": "^23.10.1",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.5.0",
    "react-i18next": "^14.1.0",
    "task-master-ai": "^0.12.1"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "overrides": {
    "@types/react": "18.3.20",
    "@types/react-dom": "18.3.7",
    "typescript": "5.8.3"
  }
}
