    },
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Coach Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "New Session",
      "short_name": "Session",
      "description": "Create a new coaching session",
      "url": "/coach/sessions/new",
      "icons": [
        {
          "src": "/icons/shortcut-session.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Reflections",
      "short_name": "Reflect",
      "description": "View reflection history",
      "url": "/client/reflections",
      "icons": [
        {
          "src": "/icons/shortcut-reflection.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Notifications",
      "short_name": "Alerts",
      "description": "Check notifications",
      "url": "/notifications",
      "icons": [
        {
          "src": "/icons/shortcut-notifications.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+lumea",
      "url": "/handle?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "audio/*", ".pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [".txt"],
        "application/pdf": [".pdf"],
        "audio/*": [".mp3", ".wav", ".m4a"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "prefer_related_applications": false
} 