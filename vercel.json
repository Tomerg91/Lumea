{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build --workspace=client",
  "outputDirectory": "client/dist",
  "installCommand": "npm ci",
  "devCommand": "npm run dev --workspace=client",
  "regions": ["iad1"],
  "functions": {
    "client/src/api/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "$RAILWAY_API_URL/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/login",
      "destination": "/auth",
      "permanent": true
    },
    {
      "source": "/signup",
      "destination": "/auth",
      "permanent": true
    },
    {
      "source": "/dashboard",
      "destination": "/",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|woff2?|png|jpe?g|gif|svg|ico|webp|avif))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "VITE_RAILWAY_API_URL": "@railway_api_url",
    "VITE_STRIPE_PUBLISHABLE_KEY": "@stripe_publishable_key",
    "VITE_APP_VERSION": "@app_version",
    "VITE_SENTRY_DSN": "@sentry_dsn",
    "VITE_GA_MEASUREMENT_ID": "@ga_measurement_id"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}